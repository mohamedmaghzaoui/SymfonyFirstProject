{% extends "base.html.twig" %}
{% block body %}
{% if error %}
<div class="alert alert-danger">{{error.messageKey}}</div>
<div class="alert alert-danger">{{lastUsername}}</div>
{% endif %}
<form method="post" class="container">
    <label for="username">Username</label>
    <input name="_username" value="{{lastUsername}}" type="text" class="form-control">
    <br>
    <label for="password">password</label>
    <input name="_password" type="password" class="form-control">
    <button class="btn btn-primary" type="submit">Login</button>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <p>{{app.user.username}}</p>
    {% endif %}


</form>
<a class="btn btn-info" href="/">Home</a>


{% endblock body %}